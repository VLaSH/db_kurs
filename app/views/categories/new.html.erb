<h1 align="center">Додати категорію</h1>

<div class="row">
  <div class="col-xs-4 col-xs-offset-4">
    <%= form_for @category do |f| %>
      <%= f.label :name, 'Назва' %>
      <%= f.text_field :name, class: "form-control" %>

      <br/>
      <%= f.submit class: 'btn btn-default btn-success' %>
    <% end %>
  </div>
</div>
